#!/bin/bash
function send_notification() {
	brightness=$(printf "%.0f\n" "$(bc -l <<< "$(brightnessctl get)*100/255")")
	dunstify -a "changebrightness" -u low -r 9991 -h int:value:"$brightness" -i "brightness-$1" "ðŸª”ðŸ’¡: $brightness%" -t 2000
}
case $1 in
up)
  brightnessctl set +1%
	send_notification $1
	;;
down)
  brightnessctl set 1%-
	send_notification $1
	;;
max)
  brightnessctl set 100%
	send_notification $1
	;;
min)
  brightnessctl set 0%
	send_notification $1
	;;
esac
