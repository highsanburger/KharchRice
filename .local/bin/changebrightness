#!/bin/bash

function send_notification() {
	brightness=$(printf "%.0f\n" $(brillo -G))
	dunstify -a "changebrightness" -u low -r 9991 -h int:value:"$brightness" -i "brightness-$1" "Brightness: $brightness%" -t 2000
}

case $1 in
up)
  brightnessctl set +5%
	# sudo brillo -A 5 -q
	send_notification $1
	;;
down)
  brightnessctl set 5%-
	# sudo brillo -U 5 -q
	send_notification $1
	;;
esac


# {F9,F10}
#   brightnessctl set {1%-,+1%}
# ctrl + {F9,F10}
#   brightnessctl set {0,255}

